<h1>Deposit Page</h1>
<div class="row">

	<div class="col-md-5 col-md-offset-1">
			<%= emf(@trans) %>
			<%= form_tag transaction_transaction_do_deposit_path, :method => "post" do %>
				<br>Select Item
				<%= select_tag 'item_id', options_for_select(Item.options), :required => "required", :placeholder =>"Amount", :class => "form-control"%>
				<br>Amount
				<%= number_field_tag 'amount', @amount , :required => "required", :autocomplete => "off", :placeholder =>"Amount", :class => "form-control"%>
				<br/>
				Select Donatur (If any)
				<%= select_tag 'donatur_id', options_for_select(Donatur.options), :required => "required", :placeholder =>"Amount", :class => "form-control"%>
				<br>Notes
				<%= text_field_tag 'notes', '', :required => "required", :autocomplete => "off", :placeholder =>"Usage...", :class => "form-control"%>
				<br />
				<button class="btn btn-primary" type="submit">Deposit Now</button>
				<%= link_to "Back", root_path, :class => 'btn btn-default btn-md'  %>

			<%end%>
	</div>
</div>

<div class='row'><%= render 'shared/transaction_histories' %></div>
